<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText7"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_user"
            android:ems="10"
            android:hint="Name"
            android:inputType="textCapWords|textPersonName" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_feed"
            android:ems="10"
            android:hint="Deparment"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_roll"
            android:ems="10"
            android:hint="Roll"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_email"
            android:layout_gravity="center_horizontal"
            android:hint="E-Mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_session"
            android:hint="Session"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_pass"
            android:hint="Password"
            android:inputType="textPassword" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/regbutton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        app:cardBackgroundColor="#110001"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#fff"
                android:text="Register" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="187dp"
        android:layout_height="103dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-125dp"
        app:srcCompat="@drawable/mist" />

</RelativeLayout>